<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewLevel1"
    android:background="@drawable/bg">

    <Button
        android:id="@+id/basic"
        android:layout_width="345dp"
        android:layout_height="84dp"
        android:layout_margin="20dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Basic"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/interm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/adv"
        android:layout_width="345dp"
        android:layout_height="84dp"
        android:layout_margin="20dp"
        android:layout_marginTop="410dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:text="Advance"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/interm" />

    <Button
        android:id="@+id/interm"
        android:layout_width="345dp"
        android:layout_height="84dp"
        android:layout_margin="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="110dp"
        android:gravity="center"
        android:text="Intermediate"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/adv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/basic"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>