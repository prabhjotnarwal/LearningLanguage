<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".colorActivity"
    android:background="@drawable/bg">


    <ImageView
        android:id="@+id/A"
        android:layout_width="270dp"
        android:layout_height="95dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/animal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/ele"
        android:layout_width="141dp"
        android:layout_height="77dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/elep"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/A" />

    <Button
        android:id="@+id/lion"
        android:layout_width="141dp"
        android:layout_height="77dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/loin"
        app:layout_constraintEnd_toStartOf="@+id/ele"
        app:layout_constraintHorizontal_bias="0.269"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/A" />

    <Button
        android:id="@+id/bear"
        android:layout_width="141dp"
        android:layout_height="77dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/be"
        app:layout_constraintBottom_toTopOf="@+id/dog"
        app:layout_constraintEnd_toStartOf="@+id/horse"
        app:layout_constraintHorizontal_bias="0.265"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lion" />

    <Button
        android:id="@+id/dog"
        android:layout_width="141dp"
        android:layout_height="77dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/dog"
        app:layout_constraintBottom_toTopOf="@+id/deer"
        app:layout_constraintEnd_toStartOf="@+id/tiger"
        app:layout_constraintHorizontal_bias="0.265"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bear" />

    <Button
        android:id="@+id/deer"
        android:layout_width="141dp"
        android:layout_height="77dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/deer"
        app:layout_constraintEnd_toStartOf="@+id/panda"
        app:layout_constraintHorizontal_bias="0.265"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dog" />

    <Button
        android:id="@+id/horse"
        android:layout_width="141dp"
        android:layout_height="77dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ho"
        app:layout_constraintBottom_toTopOf="@+id/tiger"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ele" />

    <Button
        android:id="@+id/tiger"
        android:layout_width="141dp"
        android:layout_height="77dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ti"
        app:layout_constraintBottom_toTopOf="@+id/panda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horse" />

    <Button
        android:id="@+id/panda"
        android:layout_width="141dp"
        android:layout_height="77dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/pa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tiger" />

    <Button
        android:id="@+id/tst"
        android:layout_width="258dp"
        android:layout_height="66dp"
        android:background="@drawable/btnimg1"
        android:text="Ready for Test"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deer"
        app:layout_constraintVertical_bias="0.673" />

</androidx.constraintlayout.widget.ConstraintLayout>