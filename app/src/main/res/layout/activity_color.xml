<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".colorActivity"
    android:background="@drawable/bg">


    <ImageView
        android:id="@+id/cimage"
        android:layout_width="269dp"
        android:layout_height="113dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/colors" />

    <Button
        android:id="@+id/red"
        android:layout_width="141dp"
        android:layout_height="77dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/red"
        app:layout_constraintBottom_toTopOf="@+id/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orange" />

    <Button
        android:id="@+id/blue"
        android:layout_width="141dp"
        android:layout_height="77dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/blue"
        app:layout_constraintBottom_toTopOf="@+id/violet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/red" />

    <Button
        android:id="@+id/green"
        android:layout_width="141dp"
        android:layout_height="77dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/green"
        app:layout_constraintBottom_toTopOf="@+id/yellow"
        app:layout_constraintEnd_toStartOf="@+id/orange"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cimage" />

    <Button
        android:id="@+id/yellow"
        android:layout_width="141dp"
        android:layout_height="77dp"
        android:text="green"
        android:layout_marginStart="31dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/yellow"
        app:layout_constraintBottom_toTopOf="@+id/black"
        app:layout_constraintEnd_toStartOf="@+id/red"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/green" />

    <Button
        android:id="@+id/black"
        android:layout_width="141dp"
        android:layout_height="77dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/black"
        app:layout_constraintBottom_toTopOf="@+id/white"
        app:layout_constraintEnd_toStartOf="@+id/blue"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yellow" />

    <Button
        android:id="@+id/orange"
        android:layout_width="141dp"
        android:layout_height="77dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/orangec"
        app:layout_constraintBottom_toTopOf="@+id/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cimage" />

    <Button
        android:id="@+id/white"
        android:layout_width="141dp"
        android:layout_height="77dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/violet"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/black" />

    <Button
        android:id="@+id/violet"
        android:layout_width="144dp"
        android:layout_height="77dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/violet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blue" />

</androidx.constraintlayout.widget.ConstraintLayout>